{
    "$schema": "https://json.schemastore.org/package",
    "name": "app-template",
    "version": "1.0.0",
    "description": "toolkit for building apps",
    "author": "David Castner",
    "license": "Unlicense",
    "repository": "github:davidjcastner/app-template",
    "homepage": "https://github.com/davidjcastner/app-template",
    "scripts": {
        "build:development": "npx webpack --config ./webpack.config.ts --mode=development",
        "build:production": "npx webpack --config ./webpack.config.ts --mode=production",
        "lint": "npm run lint:stylelint && npm run lint:eslint",
        "lint:eslint": "npx eslint .",
        "lint:stylelint": "npx stylelint --config ./.stylelintrc.json **/*.scss",
        "serve": "npx http-server dist",
        "start": "npm run watch:development",
        "test": "npm run test:unit",
        "test:unit": "npx jest --config=./jest.config.js --verbose ./src",
        "test:endtoend": "npx jest --config=./jest.config.js --verbose ./test",
        "test:watch": "npx jest --config=./jest.config.js --verbose ./src --watch",
        "watch:development": "npx webpack-dev-server --config ./webpack.config.ts --mode=development",
        "watch:production": "npx webpack-dev-server --config ./webpack.config.ts --mode=production"
    },
    "dependencies": {
        "normalize.css": "^8.0.1"
    },
    "devDependencies": {
        "@types/html-webpack-plugin": "^3.2.4",
        "@types/jest": "^26.0.15",
        "@types/mini-css-extract-plugin": "^1.2.0",
        "@types/webpack": "^4.41.23",
        "@types/webpack-dev-server": "^3.11.0",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "autoprefixer": "^10.0.1",
        "css-loader": "^5.0.0",
        "eslint": "^7.12.0",
        "html-webpack-plugin": "^4.5.0",
        "http-server": "^0.12.3",
        "jest": "^26.6.1",
        "mini-css-extract-plugin": "^1.2.0",
        "node-sass": "^4.14.1",
        "postcss-loader": "^4.0.4",
        "prettier": "^2.1.2",
        "sass-loader": "^10.0.4",
        "style-loader": "^2.0.0",
        "stylelint": "^13.7.2",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "stylelint-order": "^4.1.0",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.7",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3",
        "webpack": "^5.2.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0"
    }
}
